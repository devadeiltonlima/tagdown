rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite que qualquer usuário autenticado crie um registro de login.
    // Ninguém pode ler, atualizar ou deletar registros de login diretamente.
    match /login/{loginId} {
      allow create: if request.auth != null;
      allow read, update, delete: if false;
    }

    // Regra de exemplo para uma coleção de usuários:
    // Permite que os usuários leiam e escrevam seus próprios dados.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Regras para avatares de usuários
    // Permite que um usuário leia e escreva (crie/atualize) seu próprio avatar.
    match /user_avatars/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Regras para conversas da IA
    // Permite que um usuário leia e escreva seu próprio histórico de conversas.
    match /conversations/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
