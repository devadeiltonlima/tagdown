{
  "version": 2,
  "builds": [
    {
      "src": "tagdown-backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "tagdown-frontend/vite.config.ts",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "tagdown-backend/index.js"
    },
    {
      "src": "/(.*)",
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
